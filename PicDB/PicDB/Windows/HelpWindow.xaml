<UserControl x:Class="PicDB.HelpWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicDB"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="15">
        <TextBlock Margin="0,0,0,20">If you have any questions, feel free to contact us using the contact form below</TextBlock>
        <TextBox x:Name="Name" Margin="0,0,0,15">Your Name</TextBox>
        <TextBox x:Name="Mail" Margin="0,0,0,20">Your E-Mail</TextBox>
        <TextBox x:Name="Subject" Margin="0,0,0,10">Subject</TextBox>
        <TextBox x:Name="Message" Margin="0,0,0,25" Height="150" AcceptsReturn="True">Your Question / Comment</TextBox>
        <Button Margin="0,0,0,50" Click="ButtonBase_OnClick">Submit</Button>
        <TextBlock x:Name="Response" Margin="0,0,0,50">Sending-Status: Nothing sent yet</TextBlock>
</StackPanel>
</UserControl>
